@model ICollection<BOOKcheck.Storage.Entity.Book>


<html lang="en">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/search.css">
    <link rel="stylesheet" href="~/css/reset.css">
    <style>
        th,td{padding: 4px 4px 4px 4px; border-right: 3px solid #ccc;text-align:left }
    </style>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <title>Search</title>
</head>

<body>
    <div class="search" style="display:flex;">
        <div class="container1">
            <h1>Поиск</h1>
            <div class="search-wrapper">
                <div class="change">
                    <ul class="list-group">

                        <div class="select">
                            @using (Html.BeginForm("FindGenre", "Search", FormMethod.Post))
                            {
                                <label for="customRange3" class="form-label">Сортировка по:</label>

                                <select name="genreID" id="genreID" class="form-select" aria-label="Default select example">
                                    <option selected value="0"> Любой жанр </option>
                                    <option value="1">Жанр 1</option>
                                    <option value="2">Жанр 2</option>
                                    <option value="3">Жанр 3</option>
                                </select>
                                <p style="display:none"> <input type="checkbox" name="a" value="">Любой жанр</p>
                                <button style="width: 100%; margin-top:5px" type="submit" class="btn btn-primary">Искать</button>
                            }
                        </div>

                        <div class="select" style="margin-top: 5px;">
                            <hr />
                            @using (Html.BeginForm("FindAutor", "Search", FormMethod.Post))
                            {

                                <input id="name" name="name" type="text" class="form-control" placeholder="Автор" aria-label="Recipient's username" aria-describedby="basic-addon2">

                                <p style="display:none"><input type="checkbox" name="a" value="">Любой автор</p>
                                <button style="width: 100%; margin-top:5px" type="submit" class="btn btn-primary">Искать</button>
                            }

                        </div>

                        <div class="range">
                            <hr />
                            @using (Html.BeginForm("FindRating", "Search", FormMethod.Post))
                            {

                                <label style="margin-top: 0px;" for="customRange3" class="form-label">Рейтинг:</label>
                                <p>
                                    От <input name="rateDown" id="rateDown" style="width: 50%" type="text" class="form-control" placeholder="0" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                    До <input name="rateUpper" id="rateUpper" style="width: 50%" type="text" class="form-control" placeholder="10" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                </p>
                                <label for="customRange3" class="form-label">Сортировать:</label>
                                <p><input type="radio" name="a1" value="1">По возрастанию</p>
                                <p><input type="radio" name="a1" value="2">По убыванию</p>
                                <p><input type="radio" name="a1" value="0">Любой рейтинг</p>
                                <button style="width: 100%;" type="submit" class="btn btn-primary">Искать</button>
                            }
                        </div>

                    </ul>
                </div>
                <div class="spisok">

                    @using (Html.BeginForm("FindBook", "Search", FormMethod.Post))
                    {

                        <div class="input-group mb-3" style="margin-top: 10px; padding: 10px;">
                            <input name="name" id="name" type="text" class="form-control" placeholder="Искать Книгу" aria-label="Recipient's username" aria-describedby="button-addon2">
                            <button class="btn btn-primary" type="submit" id="button-addon2">Найти</button>
                        </div>
                    }
                    <nav>
                        <ul class="list-group">
                          
                            <div class="select" style="margin-top: 10px; list-style: none; padding: 10px; border: 1px solid #ccc; width: 100%; height:max-content; border-radius:10px; ">

                                <li>
                                    <table style="width: 100%">
                                        <tr style=" height:max-content; border-bottom: 1px solid #ccc">
                                            <th style="width: 30%;padding-left: 15px">Название</th>
                                            <th style="width: 10%">Жанр</th>
                                            <th style="width: 10%">Год</th>
                                            <th style="width: 20%">Автор</th>
                                            <th style="width: 15%; text-align: center">Пользовательский<br /> рейтинг</th>
                                            <th style="width: 15%; text-align: center">Мировой<br /> рейтинг</th>

                                        </tr>

                                         @if (Model.Count == 0)
                                         {<tr >

                                           <td colspan="6" style="font-size:18px; padding-left: 15px">Ничего не было найдено!</td>

                                          </tr>
                                          }

                                       @foreach (var book in Model)
                                       {
                                       
                                            <tr style="height:max-content">
                                           @if (book.Name != null)
                                           {
                                               <td style="padding-left: 15px">@book.Name</td>
                                               <td>@book.Genre.Name</td>
                                               <td>@book.Year</td>
                                               <td>@book.Author.Name</td>
                                               <td style="text-align:center">@book.Rating.OurRating</td>
                                               <td style="text-align: center">@book.Rating.WorldRating</td>
                                            }
                                            </tr>
                                        }

                                        </table>
                                </li>

                                <div style="display:none">
                                    <li>Добавить в:</li>
                                    <select style="margin-top: 5px; width: 10%;margin-left: 0px;" class="form-select" aria-label="Default select example">
                                        <option selected>Читал</option>
                                        <option value="1">Читаю</option>
                                        <option value="2">Перестал читать</option>
                                        <option value="3">Хочу прочитать</option>
                                    </select>
                                </div>
                            </div>
                        </ul>



                    </nav>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/search.js"></script>
</body>

</html>